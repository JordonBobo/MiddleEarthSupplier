  <div class="container-fluid scroll">

    <h2>Add New Product</h2>

    <form id="newProductForm">
      <div class="mb-3">
        <label for="productName" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="productName" name="name">
      </div>
      <div class="mb-3">
        <label for="productDescription" class="form-label">Description</label>
        <input type="text" class="form-control" id="productDescription" name="description">
      </div>
      <div class="mb-3">
        <label for="productImage" class="form-label">Image Filename</label>
        <input type="text" class="form-control" id="productImage" name="img_filename">
      </div>
      <div class="mb-3">
        <label for="productPrice" class="form-label">Price</label>
        <input type="text" class="form-control" id="productPrice" name="list_price">
      </div>
      <button type="submit" class="btn btn-primary">Add Product</button>
    </form>

