  </div>

  <div class="container-fluid scroll">
    <h2>Pending Orders</h2>

    <div class="table-responsive">
      <table class="table table-light">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Shipping Address</th>
            <th scope="col">Shipping Items</th>
            <th scope="col">Total Price</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody id="orderInfo">
          {{#each order}}
          {{#unless shipped}}
          <tr>
            <td>{{shippingName}}</td>
            <td>{{shippingAddress}}</td>
            <td>
              <table id="orderItems">
                {{#each shippingItems}}
                <tr>
                  <td id="title">{{title}}</td>
                  <td id="quantity">{{quantity}}</td>
                </tr>
                {{/each}}
              </table>
            </td>
            {{!-- <td id="shipping-items">{{shippingItems}}</td> --}}
            <td>₡{{totalPrice}}</td>
            <td><button class="ship" data-id="{{id}}">Ship</button></td>
          </tr>
          {{/unless}}
          {{/each}}
        </tbody>
      </table>
    </div>

    <h2>Completed Orders</h2>

    <div class="table-responsive">
      <table class="table table-light">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Shipping Address</th>
            <th scope="col">Shipping Items</th>
            <th scope="col">Total Price</th>
          </tr>
        </thead>
        <tbody id="orderInfo">
          {{#each order}}

          {{#if shipped}}
          <tr>
            <td>{{shippingName}}</td>
            <td>{{shippingAddress}}</td>
            <td>

              <table id="orderItems">
                {{#each shippingItems}}
                <tr>
                  <td id="title">{{title}}</td>
                  <td id="quantity">{{quantity}}</td>
                </tr>
                {{/each}}
              </table>
            </td>
            <td>₡{{totalPrice}}</td>
          </tr>
          {{/if}}

          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

