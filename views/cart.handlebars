<div class="container-fluid">
  <h1>Your Cart</h1>
  
  <div class="table-responsive">
    <table class="table table-light">
      <thead>
        <tr>
          <th scope="col">Item</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody id="cartInfo"></tbody>
      <tfoot>
        <td colspan="2">Total Price</td>
        <td id="orderPrice"></td>
      </tfoot>
    </table>
  </div>

  <h2>Shipping Info</h2>

  <form id="shippingInfo">
    <div class="mb-3">
      <label for="shippingName" class="form-label">Name</label>
      <input type="text" class="form-control" id="shippingName" name="name">
    </div>
    <div class="mb-3">
      <label for="shippingAddress" class="form-label">Address</label>
      <input type="text" class="form-control" id="shippingAddress" name="description">
    </div>
    <button type="submit" class="btn btn-primary" id="submitOrder">Add</button>
  </form>

